#include<stdio.h>
int main()
{
    double num1,num2,result;
    int choice;
    do
    {
        printf("\n====Welcome Sujitha====\n");
        printf("1.Select one for Addition\n");
        printf("2.Select one for Subtraction\n");
        printf("3.Select one for Multiplication\n");
        printf("4.Select one for Division\n");
        printf("5.Exit\n");
        printf("Select any of the above mentioned number to continue with operation:");
        scanf("%d",&choice);
        if(choice==5)
        {
            printf("Exiting Sujitha.Thank you!\n");
            break;


        }
        printf("Enter num1 and num2 to continue:");
        scanf("%lf %lf",&num1,&num2);

        switch(choice)
        {

        case 1:
            result=num1+num2;
            printf("The addition is:%.2lf\n",result);
            break;
        case 2:
            result=num1-num2;
            printf("The subtraction is:%2lf\n",result);
            break;
        case 3:
            result=num1*num2;
            printf("The multiplication is:%2lf",result);
            break;
        case 4:
            if(num2!=0)
                result=num1/num2;
            else
            {

                printf("Error:Division by zero is not allowed.\n");
                continue;
            }
            printf("The division is:%.2lf\n",result);
            break;
        default:
            printf("Invalid choice.Please enter a number between 1 and 5.\n");

        }
    }
    while(1);
    return 0;
}
